<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="AppBaseTheme" parent="SaveMeTheme">
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <color name="textColor">#f7f7f7</color>
    <color name="textColor.inverse">#003040</color>
    <color name="hyperLinkColor">#0079F2</color>
    <color name="bkgColor">#e8eef5</color>
    <color name="borderColor">#d39900</color>
    <color name="widgetsBkgColor">#FADB4E</color>
    <color name="hintColor">#888888</color>
    <color name="red">#FF0000</color>
    

    <style name="SaveMeTheme" parent="android:Theme.Black">
        <item name="android:windowBackground">@drawable/bkg_pattern</item>
        <item name="android:windowTitleSize">35dip</item>
        <item name="android:windowTitleStyle">@style/SaveMeTheme.WindowTitle</item>
        <item name="android:windowTitleBackgroundStyle">@style/SaveMeTheme.WindowTitleBackground</item>
        <!-- <item name="android:textAppearance">@style/SaveMeTheme.TextAppearance</item> -->
        <!-- <item name="android:textViewStyle">@style/SaveMeTheme.TextAppearance</item> -->
        <!-- <item name="android:textColorHighlight">@color/textColor</item> -->
        <!-- <item name="android:textColorHint">@color/hintColor</item> -->
        <!-- <item name="android:textColorLink">@color/textColor</item> -->
        <!-- <item name="android:textAppearanceSmall">@style/SaveMeTheme.TextAppearanceSmall</item> -->
        <!-- <item name="android:textAppearanceMedium">@style/SaveMeTheme.TextAppearanceMedium</item> -->
        <!-- <item name="android:textAppearanceLarge">@style/SaveMeTheme.TextAppearanceLarge</item> -->
        <item name="android:buttonStyle">@style/SaveMeTheme.Widget.Button</item>
    </style>

    <style name="SaveMeTheme.WindowTitle">
        <item name="android:textAppearance">@style/SaveMeTheme.WindowTitleTextAppearance</item>  
        <item name="android:paddingLeft">15dp</item>
    </style>

    <style name="SaveMeTheme.WindowTitleBackground">
        <item name="android:background">@drawable/bkg_title</item>
        <item name="android:textAppearance">@style/SaveMeTheme.WindowTitleTextAppearance</item>
    </style>

    <style name="SaveMeTheme.WindowTitleTextAppearance" parent="android:TextAppearance.WindowTitle">
        <item name="android:shadowColor">#FFFFFF</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1.5</item>
        <item name="android:textColor">@color/textColor.inverse</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SaveMeTheme.TextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/textColor</item>
        <!-- <item name="android:textAlignment">center</item> -->
        <item name="android:gravity">center</item>
    </style>

    <style name="SaveMeTheme.TextAppearanceSmall" parent="SaveMeTheme.TextAppearance">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SaveMeTheme.TextAppearanceMedium" parent="SaveMeTheme.TextAppearance">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SaveMeTheme.TextAppearanceLarge" parent="SaveMeTheme.TextAppearance">
        <item name="android:textSize">42sp</item>
    </style>

    <style name="SaveMeTheme.TextAppearanceBig" parent="SaveMeTheme.TextAppearance">
        <item name="android:textSize">65sp</item>
    </style>

    <style name="SaveMeTheme.lblDefault" parent="SaveMeTheme.TextAppearanceMedium">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="SaveMeTheme.lblDefault.Inverse" parent="SaveMeTheme.TextAppearanceMedium">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/textColor.inverse</item>
    </style>

    <style name="SaveMeTheme.lblTitle" parent="SaveMeTheme.TextAppearanceLarge">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SaveMeTheme.lblSubTitle" parent="SaveMeTheme.TextAppearanceSmall">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="SaveMeTheme.lblJumbotron" parent="SaveMeTheme.TextAppearanceBig">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SaveMeTheme.lblJumbotron.Inverse" parent="SaveMeTheme.TextAppearanceBig">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/textColor.inverse</item>
    </style>

    <style name="SaveMeTheme.lblShadowTitle" parent="SaveMeTheme.TextAppearanceLarge">
        <item name="android:textStyle">bold</item>
        <item name="android:padding">2dp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">-1</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">1.5</item>
    </style>

    <style name="SaveMeTheme.verticalDivider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#77FFFFFF</item>
    </style>

    <style name="SaveMeTheme.Widget.Button" parent="@android:style/Widget.Button">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SaveMeTheme.Widget.CallButton" parent="@android:style/Widget.Button">
        <item name="android:textAppearance">@style/SaveMeTheme.lblShadowTitle</item>
        <item name="android:background">@drawable/btn_call_selector</item>
        <item name="android:padding">15dp</item>
        <item name="android:minWidth">150dp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">-1</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="SaveMeTheme.HyperLink" parent="SaveMeTheme.TextAppearance">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/hyperLinkColor</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
    </style>

    <style name="SaveMeTheme.WiewTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/textColor.inverse</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/textColor</item>
        <item name="android:gravity">top|center_horizontal</item>
        <item name="android:padding">10dp</item>
    </style>

</resources>